<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  colors="true"
  processIsolation="false"
  stopOnFailure="false"
  >
  <php>
    <ini name="memory_limit" value="-1"/>
    <env name="XDEBUG_MODE" value="coverage"/>
  </php>

  <testsuites>
    <testsuite name="Test Suite">
      <directory>./test/</directory>
    </testsuite>
  </testsuites>
</phpunit>
